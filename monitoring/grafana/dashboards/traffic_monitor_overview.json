{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "stat",
      "title": "Frames / sec",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(frames_processed_total[1m]))", "legendFormat": "fps" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto", "colorMode": "value" }
    },
    {
      "type": "stat",
      "title": "Vehicles detected / sec",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(vehicles_detected_total[1m]))", "legendFormat": "vps" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto", "colorMode": "value" }
    },
    {
      "type": "stat",
      "title": "Plates detected / sec",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(plates_detected_total[1m]))", "legendFormat": "pps" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto", "colorMode": "value" }
    },
    {
      "type": "stat",
      "title": "Screenshots saved / min",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(screenshots_saved_total[1m]))*60", "legendFormat": "spm" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "auto", "colorMode": "value" }
    },

    {
      "type": "timeseries",
      "title": "Frame latency p95 (s)",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(frame_processing_seconds_bucket[5m])))",
          "legendFormat": "p95"
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },

    {
      "type": "timeseries",
      "title": "YOLO/Plate inference p95 (s) by model",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, model_type) (rate(model_inference_duration_seconds_bucket[5m])))",
          "legendFormat": "{{model_type}} p95"
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },

    {
      "type": "timeseries",
      "title": "API request rate by status",
      "gridPos": { "h": 7, "w": 8, "x": 0, "y": 12 },
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(api_requests_total[1m])) by (status)", "legendFormat": "{{status}}" }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },

    {
      "type": "timeseries",
      "title": "API latency p95 (s) by endpoint",
      "gridPos": { "h": 7, "w": 8, "x": 8, "y": 12 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, endpoint) (rate(api_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    },

    {
      "type": "barchart",
      "title": "Speed violations by class (5m)",
      "gridPos": { "h": 7, "w": 8, "x": 0, "y": 19 },
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(speed_violations_total[5m])) by (vehicle_class)", "legendFormat": "{{vehicle_class}}" }
      ],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["traffic", "monitor"],
  "time": { "from": "now-6h", "to": "now" },
  "timezone": "browser",
  "title": "Traffic Monitor Overview",
  "version": 1
}
